<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageViewContent" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageViewContent"
            android:layout_toEndOf="@+id/imageViewContent"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle"
            android:id="@+id/textViewContent"
            android:textSize="16sp"/>
        <TextView
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18dp"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewContent"
            android:layout_toRightOf="@+id/imageViewContent"
            android:layout_toEndOf="@+id/imageViewContent"
            android:id="@+id/textViewTimeStamp"/>

        <TextView
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUserName"
            android:layout_alignBaseline="@+id/textViewTimeStamp"
            android:layout_alignBottom="@+id/textViewTimeStamp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>